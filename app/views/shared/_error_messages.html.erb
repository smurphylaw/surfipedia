<% if object.errors.any? %>
  <div id="error-explanation">
    <div class="alert alert-block alert-danger">
      <h4><strong>The form contains <%= pluralize(object.errors.count, "error") %>.</strong></h4>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>