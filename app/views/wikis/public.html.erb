<div class="row">
  <div class="col-md-8">
    <h1> Public Wikis</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Created By</th>
          <th>Date Created</th>
          <th>Last Updated</th>
        </tr>
      </thead>
      
      <tbody>
        <% @wikis.each do |wiki| %>
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">
              <tr>
                <td><%= link_to wiki.name, wiki_path(wiki) %></td>
                <td><%= wiki.user.name %></td>
                <td><%= wiki.created_at %></td>
                <td><%= wiki.updated_at %></td>
              </tr>
            </div>
          </div>
        <% end %>
      </tbody> 
    </table>
    <%= will_paginate @wikis %>
  </div>

  <div class="col-md-4">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
  </div>
</div>