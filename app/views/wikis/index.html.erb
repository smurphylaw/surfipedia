<div class="row">
  <div class="col-md-8">
    <h1>Wikis</h1>

    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
          <% next if wiki.public == false unless wiki.user == current_user %>
            <%= link_to wiki.title, wiki %>
          </h4>
          <!-- <small>
            <%= wiki.body %>
         </small> -->
        </div>
      </div>
    <% end %>
    <%= will_paginate @wikis %>
  </div>
  <div class="col-md-4">
    <% if policy(Wiki.new).create? %>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>